<h1>Your Cart</h1>

<% if @cart_items.any? %>
  <table>
    <tr>
      <th>Product</th>
      <th>Quantity</th>
      <th>Price</th>
      <th>Actions</th>
    </tr>

    <% @cart_items.each do |item| %>
      <tr>
        <td><%= item.product.name %></td>
        <td>
        <%= form_with model: item, url: cart_item_path(item), method: :patch, local: true do |f| %>
          <%= f.number_field :quantity, value: item.quantity, min: 1 %>
          <%= f.submit "Update" %>
        <% end %>

        </td>
        <td><%= number_to_currency(item.product.price * item.quantity) %></td>
        <td>
          <%= link_to "Remove", cart_item_path(item), method: :delete %>
        </td>
      </tr>
    <% end %>
  </table>

  <h3>Total: <%= number_to_currency(@cart.total_price) %></h3>
  <%= link_to "Checkout", new_order_path, class: "btn btn-primary" %>

<% else %>
  <p>Your cart is empty.</p>
<% end %>
